// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Tags {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  tags String[]
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  bio       String
  username  String    @unique
  email     String    @unique
  token     String
  image     String
  following String[]
  password  String
}